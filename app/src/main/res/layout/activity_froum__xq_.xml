<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/forum_top_xq"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/forum_back_xq2"
            android:layout_width="50px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/return_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/forum_back_xq2"
            android:text="帖子详情"
            android:layout_marginLeft="10px"
            android:gravity="center_vertical"
            android:textSize="15sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10px"
            android:background="@drawable/forum_image" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/autorelative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray1"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@mipmap/community_detail_comment_pic" />

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100px"
            android:src="@mipmap/express" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="180px"
            android:layout_marginRight="100px"
            app:cardCornerRadius="16px">

            <EditText
                android:id="@+id/address_news_detail_edit"
                android:layout_width="150dp"
                android:layout_height="50px"
                android:background="#fff"
                android:hint="请输入标题（30字）"
                android:textColorHint="#686868"
                android:textSize="25px"

                />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="发送"
            android:textColor="@color/black"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <ScrollView
        android:layout_above="@+id/autorelative1"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/forum_top_xq"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/colorPrimary" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/year_xq2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:layout_marginLeft="10px"
                    android:textColor="@color/textview_gray"
                    android:layout_toRightOf="@+id/image_tou_xq2"
                    android:text="我来自1999@"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/time_xq2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/year_xq2"
                    android:textColor="@color/textview_gray"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/image_tou_xq2"
                    android:text="今天 17:23" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:layout_toRightOf="@+id/year_xq2"
                    android:src="@mipmap/community_detail_label" />

                <ImageButton
                    android:id="@+id/xinxi_xq2"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_alignParentRight="true"
                    android:layout_margin="30px"
                    android:background="@drawable/xinxi" />

                <ImageView
                    android:id="@+id/image_tou_xq2"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_margin="10px"
                    android:src="@mipmap/ic_launcher" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:id="@+id/xq_context2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textview_gray"
                android:text="IE和覅我好覅文化氛围防护无法水电费" />
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/linear_image_xq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300px">

                <ImageView
                    android:id="@+id/iiiii"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/trans_circle" />

                <CheckBox
                    android:id="@+id/xq_checkbox"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/finger"
                    android:button="@null" />

                <TextView
                    android:id="@+id/count_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/xq_checkbox"
                    android:layout_centerInParent="true"
                    android:text="5"
                    android:textSize="15sp" />
                    <ImageView
                        android:id="@+id/hear3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:layout_below="@+id/count_zan"
                        android:src="@mipmap/heart_4" />

                    <ImageView
                        android:id="@+id/hear4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/count_zan"
                        android:src="@mipmap/heart_5" />
                <ImageView
                    android:id="@+id/hear2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/count_zan"
                    android:src="@mipmap/heart_3" />
                    <ImageView
                        android:id="@+id/hear5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/count_zan"
                        android:src="@mipmap/heart_6" />
                </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="6px"
                    android:text="回帖" />

                <TextView
                    android:id="@+id/_listViewsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6px"
                    android:text="(4)" />
            </com.zhy.autolayout.AutoLinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/xq_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ImageView_xq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/pull_to_footer_null_reply"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_xq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="没有更多了" />
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>



</com.zhy.autolayout.AutoRelativeLayout>

