<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f1f1"
    tools:context="com.dxy.happy.activity.ForgetActivity">
<LinearLayout
    android:layout_marginTop="250px"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="100px">
    <EditText
        android:id="@+id/phone"
        android:layout_marginTop="30px"
        android:layout_marginLeft="20px"
        android:textSize="30px"
        android:layout_width="wrap_content"
        android:background="#ffffff"
        android:layout_height="wrap_content"
        android:hint="请输入您用于注册的手机号"/>
</LinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/yanzheng"
            android:layout_marginLeft="20px"
            android:layout_width="250px"
            android:textSize="30px"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"/>
        <Button
            android:id="@+id/yan1"
            android:layout_alignRight="@id/yanzheng"
            android:background="#ffda44"
            android:layout_marginLeft="280px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="获取验证码"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <LinearLayout
        android:layout_marginTop="50px"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/for_pwd"
            android:layout_marginTop="30px"
            android:layout_marginLeft="10px"
            android:layout_width="300px"
            android:textSize="30px"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:hint="设置密码"
            />
        <CheckBox
            android:password="true"
            android:id="@+id/login_eye"
            android:layout_gravity="right"
            android:checked="false"
            android:layout_marginLeft="300px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/change"
            />
    </LinearLayout>
    <Button
        android:id="@+id/tijiao"
        android:layout_marginTop="40px"
        android:layout_gravity="center"
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:background="#ffda44"
        android:text="提交"/>
</LinearLayout>
