<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mine_background"
   >
    <include layout="@layout/mine_title"></include>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="660px"
        android:layout_height="wrap_content"
        android:background="@color/mine_item_background"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px">
        <EditText
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="请输入旧的密码"
            android:textSize="@dimen/mine_text"
            android:layout_marginTop="80px"
            />
        <TextView
            android:layout_width="600px"
            android:layout_height="2px"
            android:background="@color/change_password_text"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="请输入新的密码"
            android:textSize="@dimen/mine_text"
            android:layout_marginTop="80px"
            />
        <TextView
            android:layout_width="600px"
            android:layout_height="2px"
            android:background="@color/main_bottom_tv_normal"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="请再输入新的密码"
            android:textSize="@dimen/mine_text"
            android:layout_marginTop="80px"
            />
        <TextView
            android:layout_width="600px"
            android:layout_height="2px"
            android:background="@color/main_bottom_tv_normal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30px"/>
    </com.zhy.autolayout.AutoLinearLayout>

</LinearLayout>
