<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/home_fragment_tv_love"
        android:layout_margin="15px"
        android:layout_centerVertical="true"
        android:text="@string/app_name"
        android:textSize="@dimen/activity_horizontal_text"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_margin="15px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/home_nvbar_logo"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/home_fragment_img_letter"
        android:layout_margin="15px"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/home_notice_new_pressed"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_fragment_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_framgment_framelayout"
        android:clipChildren="false"
        android:layout_centerInParent="true"
        android:background="@color/colorRed"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/home_fragment_viewpager"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/layout_margin_middle"
            android:layout_marginRight="@dimen/layout_margin_middle"
            android:clipChildren="false"
            android:layout_height="@dimen/home_framgment_framelayout"
            android:layout_gravity="center"
            >
        </android.support.v4.view.ViewPager>

    </FrameLayout>

</LinearLayout>
