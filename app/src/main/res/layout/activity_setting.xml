<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <include layout="@layout/mine_title"></include>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/setting_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:background="@color/mine_item_background"
        android:padding="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="修改密码"
            android:textColor="@color/main_bottom_tv_normal"
            android:textSize="@dimen/mine_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5px"
            android:src="@mipmap/next_indicator" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/setting_invite_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:background="@color/mine_item_background"
        android:padding="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="邀请好友"
            android:textColor="@color/main_bottom_tv_normal"
            android:textSize="@dimen/mine_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5px"
            android:src="@mipmap/next_indicator" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="680px"
        android:layout_height="2px"
        android:layout_gravity="center_horizontal" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/setting_about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/mine_item_background"
        android:padding="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="关于我们"
            android:textColor="@color/main_bottom_tv_normal"
            android:textSize="@dimen/mine_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5px"
            android:src="@mipmap/next_indicator" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="680px"
        android:layout_height="2px"
        android:layout_gravity="center_horizontal" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/setting_version_updating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/mine_item_background"
        android:padding="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="版本更新"
            android:textColor="@color/main_bottom_tv_normal"
            android:textSize="@dimen/mine_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5px"
            android:src="@mipmap/next_indicator" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="680px"
        android:layout_height="2px"
        android:layout_gravity="center_horizontal" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/setting_clear_cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/mine_item_background"
        android:padding="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="清除缓存"
            android:textColor="@color/main_bottom_tv_normal"
            android:textSize="@dimen/mine_text" />

        <ImageView
            android:id="@+id/setting_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5px"
            android:src="@mipmap/next_indicator" />

        <TextView
            android:id="@+id/tv_cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:layout_marginTop="10px"
            android:layout_toLeftOf="@+id/setting_next"
            android:text="已缓存nM" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <Button
        android:id="@+id/setting_exit"
        android:layout_width="720px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60px"
        android:background="@color/setting_exit_btn"
        android:text="退出登录"
        android:textColor="@color/white" />
</LinearLayout>
