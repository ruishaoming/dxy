<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/all_autoll"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5px"
        app:cardCornerRadius="10px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10px">

            <TextView
                android:id="@+id/community_tv_color"
                android:layout_width="10px"
                android:layout_height="40px"
                android:layout_marginTop="20px"
                android:background="@color/main_bottom_tv_check" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/community_tv_color"
                android:padding="10px">

                <TextView
                    android:id="@+id/community_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这是标题"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/community_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/community_title"
                    android:layout_marginTop="30px"
                    android:text=""
                    android:textColor="@color/textview_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/community_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/community_content"
                    android:text="作者"
                    android:textColor="@color/black" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px">

                <TextView
                    android:id="@+id/community_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12月27日 11:08"
                    android:textColor="@color/textview_gray" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="35px"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:src="@mipmap/article_comment" />

                <TextView
                    android:id="@+id/community_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/textview_gray" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </android.support.v7.widget.CardView>
</com.zhy.autolayout.AutoLinearLayout>
