<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_header_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_item_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mine_dialog_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="拍照"
        android:padding="20px"
        android:textColor="@color/main_bottom_tv_normal"
        android:textSize="@dimen/mine_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/mine_background" />

    <TextView
        android:id="@+id/mine_dialog_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="相册"
        android:padding="20px"
        android:textColor="@color/main_bottom_tv_normal"
        android:textSize="@dimen/mine_text" />
</LinearLayout>
