<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#f1f1f1"
    android:orientation="vertical"
    tools:context="com.dxy.happy.activity.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.dxy.happy.utils.RoundImageView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/logo" />

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/login_user"/>

        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/login_phone"
            android:layout_width="250dp"
            android:textSize="15dp"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:hint="手机号"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/login_password"/>


        <EditText

            android:layout_marginTop="15dp"
            android:id="@+id/login_pwd"
            android:layout_width="250dp"
            android:textSize="15dp"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:hint="密码"/>

        <CheckBox
            android:password="true"
            android:id="@+id/login_eye"
            android:layout_gravity="right"
            android:checked="false"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:button="@drawable/change"
            />
   </LinearLayout>

    <TextView
        android:id="@+id/forget"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#ffda44"
        android:text="登录"/>
<TextView
    android:layout_marginTop="15dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="使用其他社交账号登录"/>
    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/weixin"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/login_wechat_btn2"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信"/>

    <LinearLayout
        android:layout_marginTop="33dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还没有账号，立即去"/>
        <TextView
            android:id="@+id/zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#ffda45"
            android:text="注册"/>
    </LinearLayout>

</LinearLayout>
