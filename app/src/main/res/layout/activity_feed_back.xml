<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_feed_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <include layout="@layout/mine_title"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/mine_cardview_background">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450px"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:layout_marginTop="20px">

    <EditText
        android:id="@+id/feed_back_et_sugesst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:hint="大家来吐槽"
        android:background="@null"

        />
    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="问题分类"
        android:padding="20px"
        android:textSize="@dimen/feed_back_tv"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/feedback_rela1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.程序有问题，告诉程序哥哥"
            android:textSize="@dimen/feed_back_tv"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:padding="10px"/>
        <ImageView
            android:id="@+id/feedback_iv1"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/selected"
            android:layout_alignParentRight="true"/>

    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/feedback_rela2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="2px"
        android:padding="20px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.产品有问题，告诉产品妹妹"
            android:textSize="@dimen/feed_back_tv"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:padding="10px"/>
        <ImageView
            android:id="@+id/feedback_iv2"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/selected"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>

    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="2px"
        android:padding="20px"
        android:id="@+id/feedback_rela3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.界面不够美，告诉设计妹妹"
            android:textColor="@color/black"
            android:textSize="@dimen/feed_back_tv"
            android:layout_centerVertical="true"
            android:padding="10px"/>
        <ImageView
            android:id="@+id/feedback_iv3"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/selected"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>

    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="2px"
        android:padding="20px"
        android:id="@+id/feedback_rela4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.内容吸引力不够，告诉主编姐姐"
            android:textColor="@color/black"
            android:textSize="@dimen/feed_back_tv"
            android:layout_centerVertical="true"
            android:padding="10px"/>
        <ImageView
            android:id="@+id/feedback_iv4"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/selected"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>

    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="2px"
        android:padding="20px"
        android:id="@+id/feedback_rela5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.点赞/吐槽/idea,告诉boss大大"
            android:textColor="@color/black"
            android:textSize="@dimen/feed_back_tv"
            android:layout_centerVertical="true"
            android:padding="10px"/>
        <ImageView
            android:id="@+id/feedback_iv5"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/selected"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>

    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="欢迎添加客服微信: yulin1588888 实时在线答疑。"
        android:textSize="@dimen/feed_back_tv"
        android:layout_marginTop="20px"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="40px"
        android:layout_marginTop="30px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式:"
            android:textSize="@dimen/feed_back_tv"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/feed_back_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号/QQ/微信号"
            android:textSize="@dimen/feed_back_tv"
            android:background="@null"/>
    </com.zhy.autolayout.AutoLinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
